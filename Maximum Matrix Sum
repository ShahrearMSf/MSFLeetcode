class Solution:
    def maxMatrixSum(self, matrix: List[List[int]]) -> int:
        total_sum = 0
        min_abs = float('inf')
        negative_count = 0
        
        for row in matrix:
            for val in row:
                total_sum += abs(val)
                min_abs = min(min_abs, abs(val))
                if val < 0:
                    negative_count += 1
        
        # If odd number of negatives, one smallest absolute value must stay negative
        if negative_count % 2 == 1:
            total_sum -= 2 * min_abs
        
        return total_sum
