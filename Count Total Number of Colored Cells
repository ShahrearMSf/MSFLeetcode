class Solution(object):
    def coloredCells(self, n):
        """
        :type n: int
        :rtype: int
        """
        return (n * n) + ((n - 1) * (n - 1))

# Example usage:
sol = Solution()
print(sol.coloredCells(1))  # Output: 1
print(sol.coloredCells(2))  # Output: 5
print(sol.coloredCells(3))  # Output: 13
